generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id        String   @id @default(cuid())
  email     String   @unique
  avatarUrl String?
  username  String   @unique
  name      String
  subtitle  String?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
